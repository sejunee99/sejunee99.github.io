source "https://rubygems.org"

gem "jekyll", "~> 3.9" # Jekyll 버전은 사용하던 3.9대로 유지합니다.
gem "webrick"         # Ruby 3.2에서 Jekyll 서버를 돌리기 위해 필요합니다.

# --- 테마에 필요한 플러그인 추가 섹션 ---

# 💡 여기에 테마 문서에서 요구하는 모든 플러그인 (Gem)을 추가하세요.
# 예시:
# gem "jekyll-feed"
# gem "jekyll-sitemap"
# gem "jekyll-paginate"

# 테마에 필요한 Gem이 없다면 이 섹션은 비워둘 수 있습니다.

# --- GitHub Pages용 설정 ---
group :jekyll_plugins do
  # GitHub Pages에서 기본으로 사용하는 플러그인을 넣어줍니다.
  gem "jekyll-gist"
  gem "jekyll-mentions"
  gem "jekyll-paginate"
  gem "jekyll-redirect-from"
  gem "jekyll-seo-tag"
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-readme-index"
end